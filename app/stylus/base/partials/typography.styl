@import '../../utilities/vars'
@import '../../utilities/mixins'

::selection
  background $black
  color $white

h1, h2, h3, h4, h5, h6, p, ul li, ol li, blockquote, cite
  font-family $m-font, sans-serif
  color $black

h1
  font($e34, 700, 1.5)
  mb($r20)

h2
  font($e30, 700, 1.5)
  mb($r27)

h3
  font($e26, 700, 1.5)
  mb($r32)

h4
  font($e22, 700, 1.5)
  mb($r38)

h5
  font($e18, 700, 1.5)
  mb($r44)

h6
  font($e14, 700, 1.5)
  mb($r50)

p
  font($e16, 400, 1.57)
  mb($r16)

.paragraph-lead
  font-size $e20

.paragraph-small
  font-size $e14

hr
  border: 0;
  height: 1px;
  background: $black
  margin $r15 0