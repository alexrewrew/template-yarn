@import '../../utilities/vars'
@import '../../utilities/mixins'

nav
  background $white
  padding $r10 0
  trans()

.menu
  flex(row)
  justify-content flex-end
  align-items center
  height 100%
  li
    margin 0 $r15
    &:last-child
      margin-right 0
    a
      display block
      color lightblue
      &:hover
        color blue
    .active
      color blue

.nav-mobile
  display none
  +mob()
    display block

.nav-icon
  width 30px
  height 22px
  position relative
  margin $r14 0
  cursor pointer
  trans()
  transform rotate(0deg)
  float right
  span
    display block
    position absolute
    height 3px
    width 100%
    background $black
    border-radius 2px
    opacity 1
    left 0
    transform rotate(0deg)
    trans()
    &:nth-child(1)
      top 0
    &:nth-child(2), &:nth-child(3)
      top 9px
    &:nth-child(4)
      top 18px


