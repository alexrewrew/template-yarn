@import '../../utilities/vars'
@import '../../utilities/mixins'

.breadcrumbs
  flex(row)
  margin-bottom $r15
  li
    position relative
    padding-right $r15
    margin-right $r15
    &:after
      pseudo(block, absolute)
      right 0
      top 0
      height 100%
      width 1px
      background $black
      transform rotate(25deg)
    &:last-child
      &:after
        display none

    a
      display inline-block
      color $black
      &:hover
        color lightblue

    .active
      cursor default
      pointer-events: none
      color blue