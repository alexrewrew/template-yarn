@import '../../utilities/vars'
@import '../../utilities/mixins'

.pagination
  flex(row)
  justify-content center
  margin 0 auto
  li
    margin 0 r(15)
    a
      display inline-block
      co($bk)
      fs(e(18))
      &:hover
        co(lightblue)
    .arrow
      flex(row)
      justify-content center
      align-items center
      height 100%
    .active
      co(blue)
      cursor default
      pointer-events: none;