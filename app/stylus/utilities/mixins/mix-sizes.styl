// ----- MARGIN CENTER -----
mc()
  margin-left auto
  margin-right auto

//  MARGINS

mt($sz)
  margin-top $sz

mr($sz)
  margin-right $sz

mb($sz)
  margin-bottom $sz

ml($sz)
  margin-left $sz

//  PADDINGS

pt($sz)
  padding-top $sz

pr($sz)
  padding-right $sz

pb($sz)
  padding-bottom $sz

pl($sz)
  padding-left $sz


// ----- POSITION -----
pos($top = false, $right = false, $bottom = false, $left = false)
  if $top
    top $top
  if $left
    left $left
  if $right
    right $right
  if $bottom
    bottom $bottom

// REM SIZES
r(n)
  (n * ( 1 / $base-font-size ))rem

// EM SIZES
e(n)
  (n * ( 1 / $base-font-size ))em