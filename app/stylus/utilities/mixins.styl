@import 'vars'

// ----- MARGIN CENTER -----
mcen()
  margin-left auto
  margin-right auto

// ----- TEXT OVERLOW -----
tover()
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

// ----- POSITION -----
pos($top = false, $right = false, $bottom = false, $left = false)
  if $top
    top $top
  if $left
    left $left
  if $right
    right $right
  if $bottom
    bottom $bottom

// ----- DISPLAY FLEX -----
flex($direction)
  display flex
  if $direction == col
    flex-direction column

// ----- FONT (font-size, font-color, weight, line-height) -----
font($rz = false, $wght = false, $lh = false)
  if $rz
    font-size: $rz
  if $wght
    font-weight: $wght
  if $lh
    line-height: $lh

// ----- PSEUDOELEMENT -----
pseudo($display, $position)
  content: ''
  display: $display
  position: $position

// ----- TRANSITION -----
trans()
  transition: all 0.4s ease

// ----- TRIANGLE -----
triangle($colour, $direction, $rize)
  pseudo(block, absolute)
  width: 0
  height: 0
  if $direction == down
    border-left: $rize solid transparent
    border-right: $rize solid transparent
    border-top: $rize solid $colour
  else if $direction == up
    border-left: $rize solid transparent
    border-right: $rize solid transparent
    border-bottom: $rize solid $colour
  else if $direction == right
    border-top: $rize solid transparent
    border-bottom: $rize solid transparent
    border-left: $rize solid $colour
  else if $direction == left
    border-top: $rize solid transparent
    border-bottom: $rize solid transparent
    border-right: $rize solid $colour

// ----- PLACEHOLDER -----
placeholder()
  &:-moz-placeholder
    {block}
  &::-moz-placeholder
    {block}
  &:-ms-input-placeholder
    {block}
  &::-webkit-input-placeholder
