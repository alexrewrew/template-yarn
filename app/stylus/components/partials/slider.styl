@import '../../utilities/vars'
@import '../../utilities/mixins'

.slick-loading .slick-list
  background: #fff url('../img/slick/ajax-loader.gif') center center no-repeat;

@font-face
  font-family: 'slick';
  font-weight: normal;
  font-style: normal;
  src: url('../fonts/slick/slick.eot');
  src: url('../fonts/slick/slick.eot?#iefix') format('embedded-opentype'), url('../fonts/slick/slick.woff') format('woff'), url('../fonts/slick/slick.ttf') format('truetype'), url('../fonts/slick/slick.svg#slick') format('svg');


.slider
  padding-bottom $s30
  .arrow
    position absolute
    z-index 100
    height 50px
    width 50px
    top calc(50% - 25px)
    cursor pointer
    font-size $f50
    color $gray
    display flex
    align-items center
    justify-content center
    trans()
    &:hover
      color blue
  .arrow.left
    left -50px
  .arrow.right
    right -50px
  .slide
    display flex !important
    justify-content center
    align-items center
    height 350px
    overflow hidden
    &:focus
      outline none

  .slick-dots
    bottom 0
    left 0
    right 0
    display flex
    justify-content center
    li
      width auto
      height auto
      margin 0 $s3
      button
        padding 0
        border-radius 50%
        background #ccc
        width 10px
        height 10px
        font-size: 0;
        trans()
        &:before
          display none
        &:hover
          background blue
    .slick-active
      button
        background blue

.slider-counter
  font-size 3em
  margin-bottom $s16
  text-align right

.slider.slick-dotted.slick-slider
  margin-bottom $s30

.slider-two, .slider-three
  margin 0 -.938em
  .slide
    margin 0 $s15
    overflow hidden
