// DISPLAY FLEX
df($direction)
  display flex
  if $direction == col
    flex-direction column

dfc($jc, $ai)
  display flex
  justify-content $jc
  align-items $ai

// PSEUDO
ba()
  content: ''
  display: block
  position: absolute

//  TRANSITIONS
trans()
  transition: all .2s ease

// TRIANGLE
triangle($colour, $direction, $rize)
  ba()
  width: 0
  height: 0
  if $direction == down
    border-left: $rize solid transparent
    border-right: $rize solid transparent
    border-top: $rize solid $colour
  else if $direction == up
    border-left: $rize solid transparent
    border-right: $rize solid transparent
    border-bottom: $rize solid $colour
  else if $direction == right
    border-top: $rize solid transparent
    border-bottom: $rize solid transparent
    border-left: $rize solid $colour
  else if $direction == left
    border-top: $rize solid transparent
    border-bottom: $rize solid transparent
    border-right: $rize solid $colour

// COLOR
co($txtcolor)
  color $txtcolor


// BACKGROUND COLOR
bg($bgcolor)
  background-color $bgcolor

dsnone()
  @keyframes ds-none {
    0% {
      opacity: 0;
    }
  } 

//animation ds-none .2s both

fc()
  display flex
  align-items center
  justify-content center

//  HIDDEN
hd()
  opacity 0
  visibility hidden
  z-index -1

//  VISIBLE
vb()
  opacity 1
  visibility visible
  z-index 10