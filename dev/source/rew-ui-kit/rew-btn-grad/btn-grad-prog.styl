.btn-prog, .btn-grad
  position relative
  display flex
  align-items center
  justify-content center
  width 320px
  background #f72359
  height 60px
  border-radius 30px
  z-index 10
  overflow hidden
  co($wt)
  trans()
  &:hover
    co($wt)
  &__back
    position absolute
    top 0
    left 0
    width 0
    trans()

.btn-prog
  &__back
    right 0
    bottom 0
    background rgba(68, 5, 247, .5)
    z-index -2
    transition width .1s linear

.btn-grad
  transform-style: preserve-3d;
  &__back
    height 0
    z-index -1
    border-radius 50%
    box-shadow: 0px 0px 163px 50px rgba(68, 5, 247, 1)

.btn-prog.clicked
  .btn-prog__back
    width 100% !important

.btn-grad.clicked
  .btn-grad__back
    left: 0 !important
    top: 0 !important
    bottom: 0 !important
    right: 0 !important
    border-radius 30px
    box-shadow: 0px 0px 163px 350px rgba(68, 5, 247, .5)


