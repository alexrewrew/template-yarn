mixin pagination()
    ul.pagination
        li.arrow.left
            a(href='' title='')
                +arrow-left()

        +li-a('1')
        +li-a('2')
        +li-a('3', 'active')
        +li-a('4')
        +li-a('...')

        li.arrow.right
            a(href='' title='')
                +arrow-right()