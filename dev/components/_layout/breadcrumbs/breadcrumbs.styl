.breadcrumbs
  df(row)
  li
    position relative
    pr(15)
    mr(15)
    &:after
      ba()
      right 0
      top 0
      height 100%
      width r(1)
      bg($bk)
      transform rotate(25deg)

    &:last-child
      &:after
        display none

    a
      display inline-block
      co($bk)
      &:hover
        co(lightblue)
      &.active
        cursor default
        pointer-events: none
        co(blue)