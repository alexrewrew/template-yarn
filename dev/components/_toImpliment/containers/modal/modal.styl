.scroll-locked
  overflow hidden
  touch-action none

.modal
  display none

  &.is-open
    display block

.modal__overlay
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 10000
  display flex
  justify-content center
  align-items center
  background-color rgba(0, 0, 0, 0.5)
  -webkit-tap-highlight-color transparent

.modal__container
  display flex
  justify-content center
  align-items center
  width 100%
  height 100%

.modal-animation-slide
  display none

  &.is-open
    display block

body:not(.is-ie11)
  .modal-animation-slide[aria-hidden="false"]
    .modal__overlay
      animation modal-fadeIn 0.25s cubic-bezier(0, 0, 0.2, 1)

    .modal__container
      animation modal-slideIn 0.25s cubic-bezier(0, 0, 0.2, 1)

  .modal-animation-slide[aria-hidden="true"]
    .modal__overlay
      animation modal-fadeOut 0.25s cubic-bezier(0, 0, 0.2, 1)

    .modal__container
      animation modal__slideOut 0.25s cubic-bezier(0, 0, 0.2, 1)

body.is-ie11
  .modal-animation-slide[aria-hidden="false"]
    .modal__overlay
      display flex

    .modal__container
      display flex

  .modal-animation-slide[aria-hidden="true"]
    .modal__overlay
      display none

    .modal__container
      display none

.modal__overlay
  will-change opacity

.modal__container
  will-change transform

@keyframes modal-fadeIn
  from
    opacity 0

  to
    opacity 1

@keyframes modal-fadeOut
  from
    opacity 1

  to
    opacity 0

@keyframes modal-slideIn
  from
    transform translateY(20px)

  to
    transform translateY(0)

@keyframes modal-slideOut
  from
    transform translateY(0)

  to
    transform translateY(-20px)
