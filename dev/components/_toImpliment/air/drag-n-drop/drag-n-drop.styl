.drag-n-drop-description
	transition .2s opacity

	&.drag-n-drop--error
		opacity 0

.drag-n-drop-description__image
	width 126px
	margin-bottom 24px

	+above($media-screen-tablet)
		width 157px
		margin-bottom 38px

	+above($media-screen-desktop)
		margin-bottom 33px

.drag-n-drop-wrapper
	position relative
	height 48px

	+above($media-screen-desktop)
		height 294px

.drag-n-drop
	position absolute
	bottom 0
	z-index 100
	left 50%
	transform translateX(-50%)
	margin 0 auto
	transition .3s all
	border-radius 8px
	color $white
	display flex
	align-items center
	justify-content center
	width 100%

	+above($media-screen-desktop)
		padding 0 0 4px
		width 800px
		height 294px
		border 2px dashed #00c5ba
		background-color #002D41

	.icon-drop
		transition .2s transform

	.button--file
		+above($media-screen-desktop)
			margin-bottom 26px

	&.drag-n-drop--highlight
		.icon-drop
			overflow visible
			transform scale(1.3)
			transform-origin 32px 54px

		.icon-drop__arrow
			animation-delay .4s
			animation: animation-bounce 2.5s linear infinite

	&.drag-n-drop--error-file-type
	&.drag-n-drop--error-file-size
	&.drag-n-drop--error-lost-connection
		height 324px

		bottom calc(50% - 48px)
		transform translateY(-25%) translateX(-50%)

		+above($media-screen-tablet)
			height 365px

		+above($media-screen-desktop)
			bottom 0
			transform translateX(-50%)
			height 601px
			padding 0 0 12px
			border-color #ff5655
			background-color rgba(255,86,85, .1)

	&.drag-n-drop--error-file-type
		.drag-n-drop__ready-to-drop
		.drag-n-drop__error-connection-lost
		.drag-n-drop__error-file-size
			display none

		.drag-n-drop__error-file-type
			display block

	&.drag-n-drop--error-file-size

		.drag-n-drop__ready-to-drop
		.drag-n-drop__error-connection-lost
		.drag-n-drop__error-file-type
			display none

		.drag-n-drop__error-file-size
			display block

	&.drag-n-drop--error-lost-connection

		.drag-n-drop__ready-to-drop
		.drag-n-drop__error-file-size
		.drag-n-drop__error-file-type
			display none

		.drag-n-drop__error-connection-lost
			display block

	&.drag-n-drop--progress-start
		border-color #00c5ba
		background-color #002D41

		.drag-n-drop__form
			opacity 0

		.drag-n-drop__progress-wrapper
			z-index 5
			opacity 1

.drag-n-drop__form
	transition all .2s ease

.drag-n-drop__header__image
	margin-bottom 27px

.drag-n-drop__header__title
	font-size 24px
	line-height 32px
	margin-bottom 12px
	font-weight $font-weight-bolder

	+above($media-screen-desktop)
		font-size 28px

.drag-n-drop__header__subtitle
	font-size 14px
	line-height 24px
	max-width 500px
	margin 0 auto 24px

	+above($media-screen-desktop)
		font-size 18px
		margin-bottom 32px

.drag-n-drop__ready-to-drop
	display block

	.drag-n-drop__header__image
		display none

		+above($media-screen-desktop)
			display block

.drag-n-drop__error-file-size
.drag-n-drop__error-file-type
.drag-n-drop__error-connection-lost
	display none

.drag-n-drop__text
	display none

	+above($media-screen-desktop)
		display block

//PROGRESSBAR

.drag-n-drop__progress__text
	font-size 20px
	line-height 32px
	font-weight $font-weight-bolder
	margin-bottom 16px

.drag-n-drop__progress-wrapper
	z-index -1
	opacity 0
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	pointer-events none

.drag-n-drop__progress__bar
	background-image linear-gradient(to left, #ff9000, #fda22c)
	box-shadow inset 0 1px 10px 0 rgba(0, 0, 0, 0.3)

.drag-n-drop__progress__bar[value]
	appearance none
	width 448px
	height 32px
	border-radius 4px

	&::-webkit-progress-bar
		border-radius 4px
		box-shadow inset 0 1px 10px 0 rgba(0, 0, 0, 0.3)
		background-color #ffffff

	&::-webkit-progress-value
		background-image linear-gradient(to left, #ff9000, #fda22c)
		border-top-left-radius 4px
		border-bottom-left-radius 4px

@keyframes animation-bounce
	0%
		transform translateY(0)

	25%
		transform translateY(3px)

	50%
		transform translateY(4px)

	60%
		transform translateY(4px)

	90%
		transform translateY(0)

	100%
		transform translateY(0)