mixin drag-n-drop()
     .drag-n-drop-wrapper
          .drag-n-drop.wow.fadeIn(data-wow-duration=".5s")
               .drag-n-drop__progress-wrapper
                    .drag-n-drop__progress__text
                         | Uploading...

                    progress.drag-n-drop__progress__bar(max="100" value="0")

               form.drag-n-drop__form(action="" method="post" enctype="multipart/form-data" accept-charset="utf-8")
                    .drag-n-drop__body
                         .drag-n-drop__header
                              .drag-n-drop__ready-to-drop
                                   .drag-n-drop__header__image.wow.fadeInDown(data-wow-duration=".5s" data-wow-delay=".6s")
                                        +icon-upload()

                              .drag-n-drop__error-file-type
                                   .drag-n-drop__header__image
                                        +icon-error-file-type()
