.mobile-menu-trigger
	position absolute
	top 13px
	right 20px
	display flex
	justify-content center
	align-items center
	width 52px
	height 52px

	svg
		//fill #414141
		width 24px
		height 18px
		fill $white

	+above($media-screen-desktop)
		display none

.mobile-menu
	position relative
	display flex
	flex-direction column
	justify-content space-between
	overflow-x hidden
	height 100%
	background-color #333333
	user-select none
	-webkit-tap-highlight-color transparent

.mobile-menu__header
	position relative
	flex none
	height 78px

.mobile-menu__close
	position absolute
	top 16px
	right 16px
	width 46px
	height 46px
	cursor pointer

	&:before
	&:after
		position absolute
		top 22px
		left 11px
		width 25px
		height 2px
		background-color #ffffff
		content ""
		transform rotate(45deg)

	&:after
		transform rotate(-45deg)

.mobile-menu__body
	flex 1 0 auto
	overflow hidden

.mobile-menu__list
	padding 0

.mobile-menu__item
	padding-left 11px
	padding-right 20px
	position relative
	width 100%
	opacity 0
	transition none 0.2s ease
	transition-property transform, opacity
	transform translate3d(15%, 0, 0)

	&:first-child
		transition-delay 0.2s

	&:nth-child(2)
		transition-delay 0.21s

	&:nth-child(3)
		transition-delay 0.22s

	&:nth-child(4)
		transition-delay 0.23s

	&:nth-child(5)
		transition-delay 0.24s

	&:nth-child(6)
		transition-delay 0.25s

	&:nth-child(7)
		transition-delay 0.26s

	&:nth-child(8)
		transition-delay 0.27s

	&:nth-child(9)
		transition-delay 0.28s

	&:nth-child(10)
		transition-delay 0.29s

	&:last-child
		margin-bottom 0

	&.is-active
		&::before
			position absolute
			top 0
			left 0
			width 4px
			height 100%
			background-color #ff9000
			content ""

		.mobile-menu__link
			background-color transparent
			cursor inherit
			user-select none

			&:hover
				background-color transparent

.mobile-menu__link
	display inline-block
	padding 10px 18px
	color #ffffff
	text-decoration none
	font-weight bold
	font-size 20px
	line-height 28px
	user-select none

	&:hover
		border-radius 4px
		background-color rgba(0, 0, 0, 0.2)
		color #ffffff

	&.main-menu-toggler
		display block

		&::after
			top 16px
			right 20px
			width 9px
			height 9px
			border-color #6b6b6b

		&:hover
			background-color transparent

	&.has-dropdown
		&::after
			transform rotate(-45deg) translateY(4px) translateX(-4px)

.mobile-menu__dropdown-list
	display none
	padding-left 18px


.mobile-menu__dropdown-link
	font-size 18px
	color #fff
	font-weight $font-weight-bolder
	line-height normal
	display inline-block
	position relative
	padding 7px 22px 7px 0
	&::after
		border-color $white

	&.main-menu-toggler::after
		top 16px
		right 0

.mobile-menu__dropdown-list--sub-dropdown
	padding-top 17px
	padding-bottom 3px

	.mobile-menu__dropdown__item
		margin-bottom 16px

	.mobile-menu__dropdown-link
		font-size 16px
		font-weight $font-weight-normal
		padding 0

		&:hover
			text-decoration underline
			color $white



[data-offcanvas-container][data-offcanvas-hidden="false"]
	.layout__mobile-menu
		transform translate3d(0, 0, 0)

	.mobile-menu__item
		opacity 1
		transform translate3d(0, 0, 0)

.icon--mobile-menu-trigger
	width 24px
	height 17px
	cursor pointer