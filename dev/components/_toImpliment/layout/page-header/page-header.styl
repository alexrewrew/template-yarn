toggler()
	width 4px
	height 4px
	border 1px solid #444
	border-width 2px 2px 0 0
	content ""
	opacity 0.7
	transition all 0.2s
	transform rotate(135deg)

.page-header
	border-bottom 1px solid #ddd
	background #fafafa
	font-family $font-family-sans

	*
		&:before
		&:after
			box-sizing content-box

	.page-header__inner
		position relative
		display flex
		align-items center
		padding-top 10px
		padding-bottom 10px

		+above($media-screen-desktop)
			padding-top 0
			padding-bottom 0

.page-header__inner
	container()

.header-logo
	display block
	overflow hidden
	width 45px
	text-align center

	+above($media-screen-tablet)
		width 150px

.page-header__user-menu
	width 40px
	background black

.page-header__main-menu
	margin-left auto

.header-logo__img
	width 150px

.page-header__lang-toggler
	position relative
	margin-left 20px
	padding-left 20px

	&::before
		position absolute
		top 0
		bottom 0
		left 0
		display block
		overflow hidden
		margin auto 0
		width 1px
		height 21px
		background #ddd
		content ""

.lang-toggler
	position relative
	display inline-block
	padding-right 17px
	color #888
	text-transform uppercase
	white-space nowrap
	font-weight 700
	font-size 10px
	cursor pointer
	user-select none
	-webkit-font-smoothing antialiased

	&.main-menu-toggler
		&::after
			position absolute
			top calc(50% - 3px)
			right 0
			transform rotate(135deg) translateY(4px)

	&::before
		display inline-block
		margin-right 6px
		width 16px
		height 16px
		background url("../images/_global/header/lang-toggler/en.svg") no-repeat
		content ""
		vertical-align middle

.user-icon
	position relative
	margin-right 16px
	width 40px
	height 40px
	border-radius 50%
	background-image url("../images/_global/header/user-icon.svg")
	background-position center
	background-size cover
	cursor pointer
	transition all 0.2s

	&::before
		position absolute
		top -1px
		left -1px
		width calc(100% - 2px)
		height calc(100% - 2px)
		border 2px solid #ddd
		border-radius 50%
		content ""
		transition all 0.2s

	&:hover
		&::before
			border 2px solid #bbb

.main-menu-toggler
	&::after
		toggler()
		position absolute
		top calc(50% - 3px)
		right -19px

.page-header__user-icon
	position relative
	padding-left 10px

	&.is-open
		// helper to ease User Menu hover
		&:before
			position absolute
			bottom -10px
			left -32px
			display block
			width 97px
			height 50px
			content ""
			cursor pointer

		.main-menu-toggler
			&::after
				backface-visibility hidden
				opacity 1
				transform rotate(-45deg) translateY(2px) translateX(-1px)

		.user-dropdown-menu
			z-index 999
			visibility visible
			opacity 1

.user-dropdown-menu
	position absolute
	top 48px
	right -4px
	z-index -100
	visibility hidden
	width 284px
	border 1px solid #ccc
	border-radius 3px
	background #fff
	box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.15)
	opacity 0
	transition all 0.2s

	&::before
		position absolute
		top -8px
		right 31px
		z-index 1
		border-right 8px solid transparent
		border-bottom 8px solid #f7f7f7
		border-left 8px solid transparent
		content ""

	&::after
		position absolute
		top -9px
		right 30px
		border-right 9px solid transparent
		border-bottom 9px solid #bbb
		border-left 9px solid transparent
		content ""

.user-dropdown-summary
	position relative
	display flex
	align-items center
	padding 18px 3px 20px 20px
	border-bottom 1px solid #e7e7e7
	border-top-left-radius 3px
	border-top-right-radius 3px
	background #f7f7f7

.user-dropdown-summary__avatar
	.user-icon
		margin-right 5px
		width 54px
		height 54px

		&:hover
			.user-icon__editable
				visibility visible
				opacity 1

.user-icon__editable
	position absolute
	top 0
	left 0
	visibility hidden
	padding 14px 0 0 1px
	width 100%
	height 100%
	border-radius 50%
	background rgba(0, 0, 0, 0.4)
	color #fff
	text-align center
	text-transform uppercase
	letter-spacing 0.04em
	font bold 11px Arial, sans-serif
	opacity 0
	cursor pointer
	transition all 0.2s
	pointer-events none

.main-menu__link
	position relative

	&.main-menu-toggler
		&::after
			position relative
			top -4px
			right -4px
			display inline-block
			margin-right 6px
			margin-left 4px
			transform rotate(135deg)

	.is-open &
		&.main-menu-toggler
			&::after
				transform rotate(-45deg) translateY(2px) translateX(-1px)

.user-dropdown-name
	position relative
	display inline-block
	margin-bottom 1px
	padding-right 0
	max-width 177px
	color #444
	vertical-align top
	white-space nowrap
	font-weight bold
	font-size 12px
	line-height 1.42857
	cursor pointer

	&.is-active
		.user-dropdown-name__value
			display none

		.user-dropdown-name__input
		.user-dropdown-name__submit
			display block

			&:hover
				&.is-editable
					&::after
						visibility visible
						opacity 1

.user-dropdown-summary__info
	padding-left 5px

.user-dropdown-name__value
	position relative
	display inline-block
	overflow hidden
	padding-right 30px
	padding-left 8px
	max-width 174px
	vertical-align middle
	text-overflow ellipsis
	font-weight $font-weight-bolder
	font-size 12px
	line-height 26px

	&:hover
		&::after
			position absolute
			top 0
			right 2px
			width 26px
			height 26px
			background url("data:image/svg+xml;base64,")
			content ""
			cursor pointer

.user-dropdown-name__input
	display none
	padding-right 32px
	padding-left 7px
	width 100%
	height 26px
	border 1px solid transparent
	border-radius 3px
	background transparent
	color #444
	font-weight $font-weight-bolder
	font-size 12px

	&:focus
		outline none
		background white
		box-shadow 0 0 3px 1px hsla(0, 0, 67%, 0.5)

	&[disabled]
		border-color #aaaaaa
		background white
		box-shadow 0 0 3px 1px hsla(0, 0, 67%, 0.5)
		transition border-color 0.15s ease-in-out

::-ms-clear
	display none
	width 0
	height 0

::-webkit-search-decoration
::-webkit-search-cancel-button
::-webkit-search-results-button
::-webkit-search-results-decoration
	display none
	width 0
	height 0

