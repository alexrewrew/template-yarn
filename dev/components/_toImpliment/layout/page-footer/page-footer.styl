$footer-bg = #444444

.page-footer
  overflow hidden
  font-smoothing()

.page-footer__section--functionality
  padding-top 32px
  padding-bottom 28px
  background white

.page-footer__section--primary
  display none
  padding 24px 0 25px
  background $footer-bg
  font-family "Arial", sans-serif

  +above($media-screen-tablet)
    display block
    padding 36px 0 10px

    .is-ie11 & 
      padding 36px 0 9px

.page-footer__section-inner
  container()
  display flex
  flex 0 1 auto
  flex-wrap wrap
  padding-right 0
  padding-left 0

.service-functions-menus
  container()

.service-functions-menus__areas
  display none
  +above($media-screen-tablet)
    display grid
    grid-template-columns repeat(3, 1fr)
    grid-gap 25px
    grid-template-areas "category--1 category--2 category--3" "category--4 category--5 category--6"

  +above($media-screen-desktop)
    grid-template-columns repeat(6, 1fr)
    grid-template-areas "category--1 category--2 category--3 category--4 category--5 category--6"

.service-functions-menus__area
  &:nth-child(1)
    grid-area category--1

  &:nth-child(2)
    grid-area category--2

  &:nth-child(3)
    grid-area category--3

  &:nth-child(4)
    grid-area category--4

  &:nth-child(5)
    grid-area category--5

  &:nth-child(6)
    grid-area category--6

.service-functions-menu
  display flex
  flex-direction column

.service-functions-menus__title
  margin-bottom 33px
  color $title-color
  text-align center
  font-weight $font-weight-extraBold
  font-size 24px
  line-height 34px

.service-functions-menu__title
  align-self flex-start
  margin-bottom 22px
  color $text-color-light
  text-transform uppercase
  font-weight $font-weight-normal
  font-size $font-size-small
  line-height 1

  &:hover
    color $text-color-light
    text-decoration underline

.service-functions-menu__list-item
  position relative
  display flex
  align-self flex-start
  align-items center
  margin-bottom 13px
  padding-left 26px
  color $text-color-darken
  font-weight 400
  font-size 12px
  line-height 1.3

  &:hover
    color $text-color-darken
    text-decoration underline

.service-functions-menu__list-item-icon
  position absolute
  top -1px
  left 0
  width 16px
  height 16px
  font-size 0

  .icon
    background-size auto
    transform none

.page-footer__column
  padding-right 16px
  padding-left 16px
  width 25%
  overflow hidden

  +above($media-screen-desktop)
    width 16.66667%

  &:last-child
    position relative
    display flex
    justify-content space-between
    margin-top 4px
    padding-top 16px
    width 100%

    &:before
      position absolute
      top 0
      left -100%
      width 1000%
      height 1px
      background-color #515151
      content ""

    +above($media-screen-desktop)
      display block
      margin-top 0
      padding-top 0
      width 16.66667%

      &:before
        display none

.footer-menu-title a
  margin-bottom 15px
  color $white
  text-decoration none
  text-transform uppercase
  font-weight $font-weight-bolder
  font-size 12px
  line-height 14px
  transition color 0.2s

  &:hover
    color $white
    text-decoration underline

.footer-menu-title
  color $white
  text-transform uppercase
  font-weight 700
  font-size 13px
  line-height 14px

.footer-menu
  margin-top 15px
  margin-bottom 22px

.footer-menu__link
.footer-terms-note a
.footer-copyright
.footer-terms-note
  display inline-block
  color #ccc
  vertical-align top
  text-align left
  text-decoration none
  font-weight 400
  font-size 12px
  line-height 1.33
  transition color 0.2s

  &:hover
    color $white
    text-decoration underline

.footer-terms-note a
  color #999
  vertical-align inherit
  text-decoration underline
  text-transform none
  font-size 11px

.footer-copyright
.footer-terms-note
  margin-bottom 10px
  color #999
  text-transform none
  font-size 11px
  line-height 1.45

  &:hover
    color #999
    text-decoration none

.footer-terms-note
  margin-top 0

.footer-menu__item
  padding-bottom 6px

.page-footer--mobile
  display block
  padding 0
  background $footer-bg

  +above($media-screen-tablet)
    display none

  .page-footer__inner
    padding 24px 16px 14px

  .footer-menu
    margin-top 0
    margin-bottom 16px

  .footer-menu__item
    display inline-block
    padding-bottom 0
    width 49%

  .footer-menu__link
    padding-bottom 8px
    color #fff
    text-decoration none
    font-weight 400
    font-size 12px

  .footer-copyright
  .footer-terms-note
  .footer-terms-note a
    width 100%
    text-align center
    font-size 12px

  .footer-terms-note a
    width auto

  .footer-copyright
    position relative
    padding-top 20px

    &:before
      position absolute
      top 0
      left -100%
      width 1000%
      height 1px
      background-color #515151
      content ""

.footer-menu-screen-md
  +above($media-screen-desktop)
    display none

.page-footer__column--screen-md
  +above($media-screen-tablet)
    display none

  +above($media-screen-desktop)
    display block

.accordion--footer
  padding 0 16px
  +above($media-screen-tablet)
    display none

  .accordion__item
    margin-bottom 4px
    padding 0
    background-color #f9f9f9
    border-radius 0
    user-select none
    -webkit-tap-highlight-color transparent

  .accordion__title
    padding 14px 0 14px 20px
    font-size 12px
    font-weight 400
    color #888888
    text-transform uppercase

  .accordion__body
    padding 9px 35px 11px
    line-height 2.5

  .accordion__title .icon-expand-status
    position absolute
    top 50%
    right 18px
    width 13px
    height 8px
    background url("../images/_global/functionality-links/small-arrow-icon.svg") no-repeat
    background-size contain
    font-size 0
    transition transform 0.2s
    transform translateY(-50%) rotate(180deg)
    &::before
      display none
    &::after
      display none

  .accordion__title[aria-selected*="true"]
    .icon-expand-status
      transform translateY(-50%) rotate(0deg)

  .service-functions-menu__list-item
    margin-bottom 20px


