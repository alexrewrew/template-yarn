.feature-teaser--api
	display block
	outline none
	background-color #521c7c
	transition background-color 0.2s ease

	&:hover
		background-color #5F238F
		cursor pointer

		.feature-teaser__action::after
			transform translate(4px, -50%)

	&:before
		position absolute
		bottom -20px
		left 10px
		width 111px
		height 101px
		background-image url($image-path + "api-texture.png")
		background-size cover
		content ""

		+retina()
			background-image url($image-path + "api-texture@2x.png")

		+above($media-screen-desktop)
			bottom -30px
			left 20px
			width 186px
			height 169px

	&:after
		position absolute
		top 56%
		right -15px
		width 117px
		height 117px
		background-image url($image-path + "api-oval.png")
		background-size cover
		content ""
		transform translate(0, -50%)

		+retina()
			background-image url($image-path + "api-oval@2x.png")

		+above($media-screen-desktop)
			top 51%
			right -30px
			width 196px
			height 195px
			transform translate(0, -50%)

	.section-title
		margin-right 20px

