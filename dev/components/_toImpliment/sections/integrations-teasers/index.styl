$image-path = "../images/_modules/sections/integrations-teasers/"

.page-section--feature-teasers
	overflow hidden

	.page-section__inner
		padding-top 16px
		padding-bottom 51px

		+above($media-screen-tablet)
			display flex
			justify-content space-between
			padding-top 26px
			padding-bottom 58px

		+above($media-screen-desktop)
			padding-top 32px
			padding-bottom 30px

.feature-teaser
	position relative
	margin-bottom 20px
	padding 20px
	height 310px
	border-radius 2px

	&:last-child
		margin-bottom 0

	+above($media-screen-tablet)
		margin-right 12px
		margin-bottom 0
		width 50%

		&:last-child
			margin-right 0

	+above($media-screen-desktop)
		margin-right 0
		padding 28px
		width 454px
		height 470px
		border-radius 4px

	.section-title
		margin-bottom 12px
		color #ffffff
		text-align left
		font-weight 800
		font-size 19px
		line-height 1.4

		+above($media-screen-desktop)
			margin-bottom 20px
			font-size 28px
			line-height 1.29

.feature-teaser--pdffiller-itegrations
	display block
	outline none
	background-color #5aabe5
	transition background-color 0.2s ease

	&:hover
		background-color #62B6F2
		cursor pointer

		.feature-teaser__action::after
			transform translate(4px, -50%)

	&:before
		position absolute
		bottom 15px
		left -20px
		width 111px
		height 101px
		background-image url($image-path + "integration-texture.png")
		background-size cover
		content ""

		+retina()
			background-image url($image-path + "integration-texture@2x.png")

		+above($media-screen-desktop)
			bottom 35px
			left -55px
			width 186px
			height 169px

.feature-teaser__action
	position relative
	padding-right 21px
	color #ffffff
	font-weight 600
	font-size 12px
	line-height 1.67

	+above($media-screen-desktop)
		font-size 16px

	&:after
		position absolute
		top 55%
		right 0
		width 16px
		height 10px
		background-image url($image-path + "arrow-white.svg")
		background-size cover
		content ""
		transition all 0.2s ease
		transform translateY(-50%)

.feature-teaser-icon
	position absolute
	display flex
	justify-content center
	align-items center
	background-image url($image-path + "cloud.png")
	background-size cover

	+retina()
		background-image url($image-path + "cloud@2x.png")

