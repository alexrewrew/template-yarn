


.slick-loading .slick-list
  background: #fff url('../img/slick/ajax-loader.gif') center center no-repeat;

@font-face
  font-family: 'slick';
  font-weight: normal;
  font-style: normal;
  src: url('../fonts/slick/slick.eot');
  src: url('../fonts/slick/slick.eot?#iefix') format('embedded-opentype'), url('../fonts/slick/slick.woff') format('woff'), url('../fonts/slick/slick.ttf') format('truetype'), url('../fonts/slick/slick.svg#slick') format('svg');


.slider
  pb(r(30))
  .arrow
    position absolute
    z-index 100
    height 50px
    width 50px
    top calc(50% - 25px)
    cursor pointer
    fs(e(50))
    co($gr)
    display flex
    align-items center
    justify-content center
    trans()
    &:hover
      co(blue)
  .arrow.left
    left -50px
  .arrow.right
    right -50px
  .slide
    display flex !important
    justify-content center
    align-items center
    height 350px
    overflow hidden
    &:focus
      outline none

  .slick-dots
    bottom 0
    left 0
    right 0
    display flex
    justify-content center
    li
      width auto
      height auto
      margin 0 r(3)
      button
        padding 0
        border-radius 50%
        bg(#ccc)
        width 10px
        height 10px
        fs(0)
        trans()
        &:before
          display none
        &:hover
          bg(blue)
    .slick-active
      button
        bg(blue)

.slider-counter
  fs(3em)
  mb(r(16))
  text-align right

.slider.slick-dotted.slick-slider
  mb(r(30))

.slider-two, .slider-three
  margin 0 -.938em
  .slide
    margin 0 r(15)
    overflow hidden
