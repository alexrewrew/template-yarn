.range-slider
  display flex
  flex-wrap wrap
  justify-content space-between

  input
    fl(25%)

  .nouislider
    fl(100%)

  .noUi-target
    border 0
    border-radius 0
    box-shadow none
    bg($gr)

  .noUi-horizontal
    her(10)
    .noUi-handle
      box-shadow none
      border none
      bg(blue)
      border-radius 0
      &:focus
        outline none
      &:before, &:after
        display none

  .noUi-base
    clm(width, 100%, 30)
    margin 0 r(15)

  .noUi-connect
    bg(lightblue)
    border 0
    border-radius 0
    box-shadow none

  .noUi-horizontal .noUi-handle
    wir(34)
    her(22)