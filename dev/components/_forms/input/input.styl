input
  -webkit-appearance none
  width 100%
  mb(20)
  border r(1) solid $gr2
  border-radius: 0;
  padding r(11) r(15) r(12)
  trans()
  &:-webkit-autofill
    -webkit-box-shadow: inset 0 0 0 50px #fff !important
    -webkit-text-fill-color: #999 !important
  &:focus
    outline none
    border-color blue
  +placeholder()
    co(#999)

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button
  -webkit-appearance: none;
  margin: 0;

input[type=number]
  -moz-appearance:textfield;

input[type=reset]
  border 0
  cursor pointer

label
  pl(16)
  fw(700)
  fs(16)
  mb(13)




