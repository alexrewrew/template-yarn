.accordion
  &_heading
    display flex
    align-items center
    bg($wt)
    co($bk)
    cursor pointer
    padding 0 r(15) r(3)
    height r(45)
    fs(16)
    margin 0
    position relative
    trans()
    &:focus
      outline none
    &:hover
      bg(lightblue)
      co($wt)
    &:after
      triangle($bk, down, 4px)
      top calc(50% - 2px)
      right r(15)
      trans()
    &.active
      bg(blue)
      co($wt)
      &:after
        transform rotate(180deg)

  &__panel
    display none
    padding r(12) r(15) r(13)





