@import "https://use.typekit.net/ehe3cbw.css"

html
  font-size 63%

body
  font-family europa, serif
  background #ececec
  fw(500)

h1
  fw(600)
  fs(48)
  co(#333)
  margin 0
  line-height 1.3
  letter-spacing .0001em

h4
  fw(600)
  fs(28)
  co(#666)
  margin 0
  line-height 1.3
  letter-spacing .0001em

a
  font-family europa, serif
  fw(600)
  co(#3f3f3f)
  letter-spacing .001em

p
  &.top-titles
    fs(10)
    letter-spacing .2em
    text-transform uppercase
    fw(500)

.small-title
  fs(10)
  fw(500)
  letter-spacing .2em
  text-transform uppercase

.project-link
  text-decoration none
  border-bottom 2px solid #b00f24
  padding 5px 0
  font-size 1.5rem