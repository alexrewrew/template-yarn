html, body
  overflow-x hidden

body
  font(r(16), 400, normal)
  co($bk)
  bg($wt)
  ff($m-font)

+mob()
  html.open
    overflow hidden !important

  body
    pt(71)
    &.open
      overflow hidden !important

      nav
        he(100%)
        overflow scroll !important

      .nav-panel
        transform none
        position static

      

  nav
    position fixed
    lr(0)
    rr(0)
    tr(0)
    z-index 5000

  .nav-panel
    background $wt
    position: fixed;
    tr(60)
    lr(0)
    rr(0)
    br(0)
    transform translateY(-100vh)
    trans()

  .menu
    flex-wrap wrap
    justify-content center
    li
      margin r(10) 0
      fl(100%)
      text-align center
      a
        fs(22)
        display inline-block  
