html
  font-size $base-font-pixels

html, body
  overflow-x hidden

body
  font(r(16), 400, normal)
  co($bk)
  bg($wt)
  font-family $m-font, sans-serif

+mob()
  html.open
    overflow hidden !important

  body
    pt(71)
    &.open
      overflow hidden !important
      nav
        height 100%
        overflow scroll !important
      .nav-panel
        transform none
        position static
      .nav-icon
        span
          &:nth-child(1)
            top r(18)
            width 0
            left 50%
          &:nth-child(2)
            transform rotate(45deg)
          &:nth-child(3)
            transform rotate(-45deg)
          &:nth-child(4)
            top r(18)
            width 0
            left 50%

  nav
    position fixed
    left 0
    right 0
    top 0
    z-index 5000

  .nav-panel
    background $wt
    position: fixed;
    top: r(60)
    left: 0;
    right: 0;
    bottom: 0;
    transform translateY(-100vh)
    trans()

  .menu
    flex-wrap wrap
    justify-content center
    li
      margin r(10) 0
      fl(100%)
      text-align center
      a
        fs(22)
        display inline-block  
